{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",                            // âœ… Root of the project
    "paths": {
      "@/*": ["src/*"],                        // Root alias
      "@shared/*": ["src/shared/*"],           // Shared components and utilities
      "@features/*": ["src/features/*"],       // Feature components
      "@utils/*": ["src/utils/*"],             // Utility functions
      "@hooks/*": ["src/hooks/*"],             // Custom React hooks
      "@types/*": ["src/types/*"],             // TypeScript types
      "@config/*": ["src/config/*"],           // Configuration
      "@services/*": ["src/services/*"],       // API services
      "@constants/*": ["src/constants/*"],     // Constants
      "@styles/*": ["src/styles/*"]            // CSS or Tailwind configs
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
